<%= provide(:title,"通知") %>

<div class="notification_index">
  <div class="post_index">
    <div class="room_index_box">
      <div class="message_box">通知</div>
      <% if @notifications.exists? %>
        <a rel="nofollow" data-method="delete" href="/notifications/destroy_all" class="delete_link">
          <i class="fas fa-trash"></i>全削除
        </a>
        <%= render @notifications %>
      <% else %>
        <div class="no_notification">通知はありません</div>
      <% end %>
    </div>
    <%= paginate @notifications %>
  </div>
</div>
