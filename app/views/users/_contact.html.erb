<% if user_signed_in? %>
  <% unless @user == current_user %>
    <% if @haveRoom == true %>
      <%= link_to  room_path(@roomId) do %>
        <div class="direct_message">
          <i class="far fa-envelope"></i> メッセージを送る
        </div>
      <% end %>
    <% else %>
      <%= form_with(model:@room, local: true) do |f| %>
        <%= fields_for @entry do |e| %>
          <%= e.hidden_field :user_id, value: @user.id %>
        <% end %>
        <%=  f.button :type => "submit", class:"direct_message" do %>
          <i class="far fa-envelope"></i> メッセージを送る
        <% end%>
      <% end %>
    <% end %>
  <% end %>
<% end %>
