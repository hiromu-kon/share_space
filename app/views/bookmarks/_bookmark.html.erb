<span id="bookmark_form_<%= post.id %>" class="bookmark_form">
  <% if user_signed_in? %>
    <% if current_user.bookmarked_by?(post) %>
      <%= render 'bookmarks/unbookmark_button', post: post %>
    <% else %>
      <%= render 'bookmarks/bookmark_button', post: post %>
    <% end %>
  <% end %>
</span>
