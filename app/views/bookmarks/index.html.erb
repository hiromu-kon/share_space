<%= provide(:title,"ブックマーク一覧") %>
<div class="post_index">
  <div class="row">
    <div class="">
      <% if @posts.any? %>
        <div class="bookmark_index">
          <h5 class="bookmark_title">ブックマーク一覧</h5>
          <%= link_to "csvで出力する", user_bookmarks_path(format: :csv) %>
          <%= render @posts %>
          <%= paginate @posts %>
        </div>
      <% else %>
        <h5 class="empty_bookmark">ブックマークした募集はありません</h5>
        <%= link_to "スペース募集を探す", posts_path, class:"mypage_edit" %>
      <% end %>
    </div>
  </div>
</div>
