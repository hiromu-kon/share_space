<div class="device">
  <div class="device_frame">
    <div class="form_title">
    <p>コールセンター専用</p>
    <p>新規登録</p>
    </div>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "call_center_users/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, class:"label_name" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form_control" %>
      </div>
      <div class="field">
        <%= f.label :password, class:"label_name" %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form_control" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class:"label_name" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form_control" %>
      </div>
      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class:"form_control btn_primary" %>
        <%= link_to "ゲストとしてログイン(コールセンター用)", '#', class:"form_control gest_button" %>
      </div>
      <% end %>
      <div class="link_blue">
        <%= link_to "すでにアカウントをお持ちの方はログイン", new_session_path(resource_name), class:"link_blue" %>
      </div>
    </div>
  </div>
</div>
