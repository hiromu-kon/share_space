<% unless @post.host_user.id == current_host_user.id %>
  <% if @haveRoom == true %>
    <%= link_to  room_path(@roomId) do %>
      <div class="btn-border">
        <i class="far fa-envelope"></i> DMを送る
      </div>
    <% end %>
  <% else %>
    <%= form_with(model:@room, local: true, class:"form_post_contact") do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :host_user_id, value: @post.host_user.id %>
      <% end %>
      <%=  f.button :type => "submit", class:"btn-border" do %>
        <i class="far fa-envelope"></i> DMを送る
      <% end %>
    <% end %>
  <% end %>
<% end %>
