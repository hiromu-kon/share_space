<div class="container">
  <div class="post_index">
    <div class="post_device">
      <div class="left_box">
        <h3>検索条件</h3>
        <input type="text" placeholder="フリーワードで検索" class="form_search">
        <i class="fas fa-search"></i>
        <h3>職種</h3>
      </div>
      <div class="post_detail">
        <div class="recruit_title">
          <span class="title_name">募集一覧</span>
          <span><%= @posts.count %>件表示</span>
          <%= link_to "募集する", new_post_path, class:"recruit_link"%>
        </div>

        <% @posts.each do |post| %>
          <hr class="post_separate">
          <%= link_to post.host_user do %>
            <div class="post_company">
              <% if post.host_user.image.attached? %>
                <%= image_tag  post.host_user.image, class:"post_company_image" %>
              <% else %>
                <%= image_tag 'user_default.png', class:"post_company_image" %>
              <% end %>
              <span><%= post.host_user.name %></span>
            </div>
          <% end %>
          <%= link_to post do %>
            <div>
              <%= image_tag post.image, class:"post_index_image" %>
            </div>
            <h1 class="post_title"><%= post.title %></h1>
            <p class="post_content"><%= post.content %></p>
            <div class="group"><h3>報酬(月単価)<span>約<%= number_to_currency(post.reward) %></span></h3></div>
            <div class="group"><h3>募集人数<span><%= post.recruit_people %>人</span></h3></div>
            <div class="group"><h3>募集期間<span><%= post.start_date %> 〜 <%= post.finish_date %></span></h3></div>
            <h3 class="post_address">オフィス住所<span>北海道札幌市南区藤野3条4丁目1-24 プレジールビル6階</span></h3>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
