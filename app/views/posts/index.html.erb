<%= provide(:title, "投稿一覧") %>

<div class="container">
  <div class="post_index">
    <div class="post_device">
      <% if current_user && current_user.skill == true %>
        <% @posts.each do |post| %>
          <% if post.user.skill == true %>
            <div>
              <div><%= post.user.name %></div>
              <div><%= post.title %></div>
            </div>
          <% end %>
        <% end %>
      <% else %>
       <%= render 'host_post_index'%>
      <% end %>
    </div>
  </div>
</div>
