<%= provide(:title, "新規投稿") %>

<div class="post_show_container">
  <div class="device">
    <div class="post_form">
      <%= link_to posts_path, class:"index_link" do%>
        <i class="far fa-arrow-alt-circle-left"></i>投稿一覧に戻る
      <% end %>

      <% if current_user.skill == true %>
        <%= render 'skill_post_new' %>
    　<% else %>
        <%= render 'host_post_new' %>
      <% end %>
    </div>
  </div>
</div>
