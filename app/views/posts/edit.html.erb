<%= provide(:title, "投稿編集") %>
<div class="post_show_container">
  <div class="device">
    <div class="post_form">
      <%= link_to post_path, class:"index_link" do%>
        <i class="far fa-arrow-alt-circle-left"></i>募集詳細に戻る
      <% end %>
      <% if current_user.skill == true %>
        <%= render 'skill_post_new' %>
        <%= link_to '投稿を削除する', @post, method: :delete, data: { confirm: "【確認】投稿を削除してもよろしいですか？" }, class:"form_control post_delete" %>
    　<% else %>
        <%= render 'host_post_new' %>
        <%= link_to '投稿を削除する', @post, method: :delete, data: { confirm: "【確認】投稿を削除してもよろしいですか？" }, class:"form_control post_delete" %>
      <% end %>
    </div>
  </div>
</div>
