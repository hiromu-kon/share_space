<% provide(:title, @host_user.name) %>

<div class="detail_frame">
  <%= image_tag 'header_default.jpg', class:"header_detail" %>
  <div class="company_block">
    <%= image_tag 'user_default.png', class:"user_icon" %>
    <p class="company_name">
      <%= @host_user.name %>
    </p>
    <p class="company_address">
      <i class="fas fa-map-marker-alt"></i>
      <%= @host_user.prefectures %>
    </p>
    <p class="company_homepage">
      <i class="fa fa-link"></i>
        <%= raw Rinku.auto_link(@host_user.home_page, :all, 'target="_blank"') if @host_user.home_page %>
    </p>
    <% if current_host_user == @host_user %>
      <%= link_to 'アカウントを編集する', edit_host_user_registration_path, class:"direct_message mypage_edit" %>
    <% else %>
      <div class="direct_message fade_in">
       <p>ダイレクトメッセージを送る</p>
      </div>
    <% end %>
    <div class="company_description fade_in">
      <p><%= @host_user.introduction %></p>
    </div>
    <div class="company_info fade_in">
      <h3>会社情報</h3>
      <ul class="info_box">
        <li>業種<span class="sub_category"><%= @host_user.industry %></span>
        </li>
        <li>平均年齢<span class="sub_category"><%= @host_user.average_age %></span></li>
        <li>募集中<span class="sub_category">2件</span></li>
      </ul>
    </div>
  </div>
  <div>
    <h2 class="user_post_index"><%= @host_user.name %>さんの投稿</h2>
  </div>
</div>
